[Unit]
Description=S-HO.ME service
After=network.target

[Service]
Type=simple
ExecStart=bash <to_project_dir>/s-ho.me-ctrl/shomestart.sh
WorkingDirectory=<to_project_dir>/s-ho.me-ctrl
Restart=on-failure

[Install]
WantedBy=multi-user.target
